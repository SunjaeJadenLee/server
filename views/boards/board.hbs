<div class="container">
  {{#if info}}
  <h6 class="validation-info">* {{info}}</h6>
  {{/if}}
  <h1 class="my-4">Leader Board</h1>
  <div id="custom-search-input">
    <form class="row" method="POST" action="/board_search">
      <div class="col-md-5 input-group">
        <select class="form-control-sm" name="searchList">
          <option>Title</option>
          <option>User Name</option>
        </select>
        <input type="text" class="form-control" name="searchContent" placeholder="Search"/>
        <span class="input-group-btn">
          <button class="btn btn-info btn-lg" type="Submit">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    </form>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Title</th>
        <th>Create Date</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      {{#board}}
      <tr>
        <td>{{id}}</td>
        <td>{{userName}}</td>
        <td><a class="text-dark"href="../detail/{{id}}"><strong>{{boardTitle}}</strong></a></td>
        <td>{{createdAt}}</td>
        <td class="text-right">
          <form action="/create/{{userName}}" method="POST">
            <button class="btn btn-icon" type="submit"><i class="brand fa fa-edit"></i></button>
            <a class="btn" href="/delete/{{userName}}/{{boardTitle}}"><i class="fa fa-trash-alt"></i></a>&nbsp;
            <input type="hidden" name="id" , value="{{id}}" />
          </form>

        </td>
      </tr>
      {{/board}}
    </tbody>
  </table>
</div>